---
import { Icon } from "astro-icon";
import {location} from "../utils/data.json"
---

<footer class="flex flex-wrap items-center justify-between w-full py-4 md:px-16 px-4 bg-primary-darker">
  <div class="flex flex-col pr-10">
    <p class="footer-header">Matteo<span>_</span></p>
    <p class="footer-txt">Copyright &copy; {new Date().getFullYear()} - All rights reserved</p>
  </div>
  <div class="flex flex-col">
    <p class="footer-header">Location<span>_</span></p>
    <p class="footer-txt">{location.country}</p>
  </div>
  <div class="flex flex-col ml-auto">
    <p class="footer-header">Social<span>_</span></p>
    <div class="flex gap-4  py-4">
      <a rel="me" href="https://hachyderm.io/@mgassend" target="_blank"aria-label="mastodon">
        <Icon name="mdi:mastodon" class="w-6 h-6 text-white opacity-70" />
      </a>
      <a href="https://twitter.com/matgassend" target="_blank"aria-label="twitter"
      ><Icon class="w-6 h-6 text-white opacity-70" name="mdi:twitter" /></a
    >
      <a href="https://github.com/matfire" target="_blank"aria-label="github">
        <Icon name="mdi:github" class="w-6 h-6 text-white opacity-70" />
      </a>
      <a href="https://www.linkedin.com/in/matteo-gassend/" target="_blank"aria-label="linkedin" href="linkedin">
        <Icon name="mdi:linkedin" class="w-6 h-6 text-white opacity-70" />
      </a>
    </div>
  </div>
</footer>

<style>
  .footer-header {
    @apply text-sm text-white opacity-80 uppercase;
  }
  .footer-header > span {
    @apply font-normal;
  }
  .footer-txt  {
    @apply text-xs text-white opacity-70 py-4;
  }
</style>
