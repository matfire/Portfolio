---
import type { Article } from "../utils/article.type";

export interface Props {
  article: Article;
}

const { article } = Astro.props;
---

<article
  class="relative bg-cover bg-center w-full h-48"
  style={`background-image: url(${article.coverImage})`}
>
  <div
    class="absolute text-center w-full h-full flex flex-col justify-center items-center bg-opacity-70 bg-black"
  >
    <h1 class="font-bold">{article.title}</h1>
    <p>published {new Date(article.dateAdded).toLocaleDateString()}</p>
    <a
      class="p-2 border-transparent border-2 hover:border-white transition-[border]"
      href={`https://blog.matteogassend.com/${article.slug}`}>Learn More</a
    >
  </div>
</article>
