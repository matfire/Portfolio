---
import { Icon } from "astro-icon/components";
export interface Props {
  name: string;
}

const { name } = Astro.props;

let icon = "iconoir:file-not-found";

switch (name) {
  case "typescript":
    icon = "mdi:language-typescript";
    break;
  case "svelte":
    icon = "simple-icons:svelte";
    break;
  case "graphql":
    icon = "mdi:graphql";
    break;
  case "react":
    icon = "mdi:react";
    break;
  case "docker":
    icon = "mdi:docker";
    break;
  case "python":
    icon = "mdi:language-python";
    break;
  case "html":
    icon = "mdi:language-html5";
    break;
  case "css":
    icon = "mdi:language-css3";
    break;
  case "javascript":
    icon = "mdi:language-javascript";
    break;
  case "postgresql":
    icon = "simple-icons:postgresql";
    break;
  case "nodejs":
    icon = "mdi:nodejs";
    break;
  case "flutter":
    icon = "simple-icons:flutter";
    break;
  case "mongodb":
    icon = "simple-icons:mongodb";
    break;
  case "php":
    icon = "mdi:language-php";
    break;
  case "mysql":
    icon = "simple-icons:mysql";
    break;
  case "astro":
    icon = "simple-icons:astro";
    break;
  case "nestjs":
    icon = "simple-icons:nestjs";
    break;
  case "remix":
    icon = "simple-icons:remix";
    break;
  default:
    icon = "iconoir:file-not-found";
    break;
}
---

<div class="h-12 flex flex-col items-center">
  <div class="h-8 w-8">
    {name !== 'remix' ? <Icon name={icon} /> : <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><defs><path id="skillIconsRemixLight0" fill="#374053" fill-rule="evenodd" d="M187.903 168.726c1.361 17.488 1.361 25.686 1.361 34.634h-40.462c0-1.949.035-3.732.07-5.54c.11-5.621.224-11.482-.687-23.318c-1.203-17.329-8.665-21.179-22.386-21.179H62.16v-31.528h65.565c17.331 0 25.997-5.272 25.997-19.231c0-12.275-8.666-19.713-25.997-19.713H62.16V52h72.786c39.236 0 58.734 18.532 58.734 48.134c0 22.142-13.72 36.582-32.256 38.989c15.647 3.129 24.794 12.034 26.479 29.603Z" clip-rule="evenodd"/></defs><g fill="none"><rect width="256" height="256" fill="#F4F2ED" rx="60"/><use href="#skillIconsRemixLight0" fill-rule="evenodd" clip-rule="evenodd"/><use href="#skillIconsRemixLight0" fill-rule="evenodd" clip-rule="evenodd"/><path fill="#374053" d="M62.16 203.36v-23.503h42.783c7.146 0 8.698 5.3 8.698 8.461v15.042h-51.48Z"/><path fill="#374053" stroke="#F2F6FC" stroke-opacity=".8" stroke-width=".32" d="M62 203.36v.16h51.801v-15.202c0-1.602-.392-3.755-1.701-5.512c-1.314-1.765-3.539-3.109-7.157-3.109H62v23.663Z"/></g></svg>}
  </div>
  <p class="uppercase text-primaty-darker opacity-50 text-[9px] pt-2">{name}</p>
</div>

<style>
  [data-icon] {
      color: #374053;
      /* OR */
      fill: #374053;
  }
</style>

